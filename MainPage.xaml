<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PdfFormFramework.Controls;assembly=PdfFormFramework"
    xmlns:models="clr-namespace:PdfFormDemo.Models;assembly=PdfFormDemo"
    x:Name="mainPage"
    x:Class="PdfFormDemo.MainPage"
    BackgroundColor="White">
    <ContentPage.BindingContext>
        <Binding Source="{x:Reference mainPage}" />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="First Name" />
        <Entry
            Grid.Row="0"
            Grid.Column="3"
            Grid.ColumnSpan="4"
            Text="{Binding _pdfFormData.FirstName}"
            Placeholder="First Name"
            Keyboard="Default"
            ClearButtonVisibility="WhileEditing" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="Last Name" />
        <Entry
            Grid.Row="1"
            Grid.Column="3"
            Grid.ColumnSpan="4"
            Text="{Binding _pdfFormData.LastName}"
            Placeholder="Last Name"
            Keyboard="Default"
            ClearButtonVisibility="WhileEditing" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Address1" />
        <Entry
            Grid.Row="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Text="{Binding _pdfFormData.Address1}"
            Placeholder="Address1"
            Keyboard="Default"
            ClearButtonVisibility="WhileEditing" />
        <Label
            Grid.Row="2"
            Grid.Column="4"
            Text="House No" />
        <Entry
            Grid.Row="2"
            Grid.Column="5"
            Grid.ColumnSpan="2"
            Text="{Binding _pdfFormData.HouseNumber}"
            Placeholder="House No"
            Keyboard="Default"
            ClearButtonVisibility="WhileEditing" />
        <Label
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="Address2" />
        <Entry
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="4"
            Text="{Binding _pdfFormData.Address2}"
            Placeholder="Address2"
            Keyboard="Default"
            ClearButtonVisibility="WhileEditing" />
        <Label
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Zip Code" />
        <Entry
            Grid.Row="3"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Text="{Binding _pdfFormData.ZipCode}"
            Placeholder="Zip Code"
            Keyboard="Numeric"
            ClearButtonVisibility="WhileEditing" />
        <Label
            Grid.Row="3"
            Grid.Column="4"
            Text="City" />
        <Entry
            Grid.Row="3"
            Grid.Column="5"
            Grid.ColumnSpan="2"
            Text="{Binding _pdfFormData.City}"
            Placeholder="City"
            Keyboard="Default"
            ClearButtonVisibility="WhileEditing" />
        <Label
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="Gender" />
        <Picker Grid.Row="42"
                Grid.Column="3"
                Grid.ColumnSpan="4"
                Title="Select Gender"
                ItemsSource="{Binding _pdfFormData.Genders}"
                SelectedItem="{Binding ApplicationFormData.Gender, Mode=TwoWay}" />
        <Label
            Grid.Row="5"
            Grid.Column="4"
            Text="Height" />
        <Entry
            Grid.Row="5"
            Grid.Column="5"
            Grid.ColumnSpan="2"
            Text="{Binding _pdfFormData.Height}"
            Placeholder="Height"
            Keyboard="Default"
            ClearButtonVisibility="WhileEditing" />
        <Label
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Dirvers License" />
        <CheckBox
            Grid.Row="6"
            Grid.Column="2"
            IsChecked="{Binding _pdfFormData.DrivingLicense}" />
        <Label
            Grid.Row="7"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="I speak and understand (Check all that apply):" />
        <CheckBox
            Grid.Row="8"
            Grid.Column="0"
            IsChecked="{Binding _pdfFormData.Deutsch}" />
        <Label
            Grid.Row="8"
            Grid.Column="1"
            Text="Deutsch" />
        <CheckBox
            Grid.Row="8"
            Grid.Column="2"
            IsChecked="{Binding _pdfFormData.English}" />
        <Label
            Grid.Row="8"
            Grid.Column="3"
            Text="English" />
        <CheckBox
            Grid.Row="8"
            Grid.Column="4"
            IsChecked="{Binding _pdfFormData.French}" />
        <Label
            Grid.Row="8"
            Grid.Column="5"
            Text="French" />

        <CheckBox
            Grid.Row="8"
            Grid.Column="6"
            IsChecked="{Binding _pdfFormData.Spanish}" />
        <Label
            Grid.Row="8"
            Grid.Column="7"
            Text="Spanish" />

        <CheckBox
            Grid.Row="8"
            Grid.Column="8"
            IsChecked="{Binding _pdfFormData.Latin}" />
        <Label
            Grid.Row="8"
            Grid.Column="9"
            Text="Latin" />
        <Picker
            Grid.Row="9"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Title="Select Favourite Colors"
            ItemsSource="{Binding _pdfFormData.FavouriteColors}"
            SelectedItem="{Binding _pdfFormData.FavouriteColors, Mode=TwoWay}" />
    </Grid>
</ContentPage>